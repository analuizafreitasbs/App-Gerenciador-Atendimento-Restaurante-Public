<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="com.example.controller.TelaCadastroGarcomController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <Label text="Cadastro de Novo Garçom" style="-fx-text-fill: #333333;">
        <font>
            <Font size="24.0" />
        </font>
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </Label>

    <Label text="Nome Completo:" style="-fx-font-weight: bold;"/>
    <TextField fx:id="nomeCompletoField" promptText="Digite o nome completo do garçom" prefWidth="250.0" />

    <Button onAction="#handleCadastrar" prefHeight="35.0" prefWidth="150.0" text="Cadastrar" />

    <Button onAction="#handleVoltarLogin" text="Voltar para o Login" prefHeight="35.0" prefWidth="200.0" >
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>
    </Button>
</VBox>